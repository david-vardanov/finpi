<% layout('layout') %>

<div class="container">
  <h1 class="my-3">Tags</h1>
  <a href="/expenses/tags/create" class="btn btn-primary mb-3">Create New Tag</a>
  <ul class="list-group">
    <% tags.forEach(tag => { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= tag.name %>
        <div>
          <a href="/expenses/tags/<%= tag._id %>/edit" class="btn btn-secondary me-2">Edit</a>
          <form action="/expenses/tags/<%= tag._id %>/delete" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </li>
    <% }) %>
  </ul>
</div>